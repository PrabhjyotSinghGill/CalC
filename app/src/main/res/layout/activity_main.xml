<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="6"
    android:background="#E67E22">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:background="#ECF0F1"
            android:gravity="right"
            android:text="0"
            android:textSize="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/Clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:alpha="0.9"
                android:text="C"
                android:textSize="30dp" />

            <Button
                android:id="@+id/Multiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=""
                android:alpha="0.9"
                android:text="*"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/Seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.7"
                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/Eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.7"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/Nine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_weight="1"
                android:alpha="0.7"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:layout_weight="1"
                android:alpha="0.9"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/Four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_weight="1"
                android:alpha="0.7"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:layout_weight="1"
                android:alpha="0.7"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:layout_weight="1"
                android:alpha="0.7"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/Minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:layout_weight="1"
                android:alpha="0.9"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/One"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:alpha="0.7"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:alpha="0.7"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:alpha="0.7"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:alpha="0.9"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/Zero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="2"
                android:alpha="0.7"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:layout_weight=""
                android:alpha="0.9"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/Equals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:layout_weight=""
                android:alpha="0.9"
                android:textSize="30dp"

                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>